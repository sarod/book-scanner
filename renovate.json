{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sarod/renovate-config"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchDepNames": ["pnpm"],
      "automerge": true
    },
    {
      "matchDepNames": ["lucide-react"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
